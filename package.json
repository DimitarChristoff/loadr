  "scripts": {
    "start": "webpack-dev-server --hot --inline --debug --compress --watch-poll --progress",
    "clean": "rimraf dist coverage",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --progress --debug",
    "lint": "eslint . --ext .js --ext .jsx; exit 0",
    "lint:fix": "eslint --fix . --ext .js --ext .jsx; exit 0",
    "test": "npm run lint && cross-env NODE_ENV=test jest tests",
    "test:watch": "npm test -- --watch",
    "test:update-snapshot": "npm test -- -u",
    "prepublish": "npm test && npm run build",
    "publish": "npm run build"
  },
  "devDependencies": {
    "babel": "^6.1.18",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.0",
    "babel-jest": "^15.0.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "cross-env": "^1.0.8",
    "eslint": "^3.7.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.13.0",
    "jest": "^15.1.1",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.0"
  },
  "jest": {
    "collectCoverage": true
  }
